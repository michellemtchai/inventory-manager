<p style="color: green"><%= notice %></p>

<p><%= link_to "Back to Home", root_path %></p>

<h2>Cities</h2>

<% @city_page = 'index' %>
<% if @cities.size > 0 %>
    <table id="cities">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Region</th>
            <th>Country</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Actions</th>
        </tr>
        <% @cities.each do |city| %>
            <%= render city %>
        <% end %>
    </table>
<% else %>
    <p>There's no inventory items.</p>
<% end %>
<br>
<%= link_to "New city", new_city_path %>
